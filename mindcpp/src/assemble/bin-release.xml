<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
        <format>tar.bz2</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>

        <dependencySet>
            <outputDirectory>ext</outputDirectory>
            <includes>
                <include>${project.groupId}:adl-backend-cpp</include>
                <include>${project.groupId}:idl-backend-cpp</include>
                <include>${project.groupId}:idl-frontend-cpp</include>
            </includes>
            <fileMode>0644</fileMode>
        </dependencySet>

        <dependencySet>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/**</exclude>
                </excludes>
            </unpackOptions>
            <includes>
                <include>${project.groupId}:fractal-runtime-cpp</include>
            </includes>
            <outputDirectory>runtime</outputDirectory>
            <fileMode>0644</fileMode>
        </dependencySet>

    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/assemble/resources/examples</directory>
            <filtered>false</filtered>
            <outputDirectory>examples</outputDirectory>
            <fileMode>0644</fileMode>
             <useDefaultExcludes>false</useDefaultExcludes>
             <excludes>
				<exclude>**/docbkx/**</exclude>
				<exclude>**/site/**</exclude>
				<exclude>**/target/**</exclude>
				<exclude>**/.metadata/**</exclude>
				<exclude>**/.settings/**</exclude>
				<exclude>**/.localmindrepo/**</exclude>
          	</excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/assemble/resources/mindc++</source>
            <fileMode>0755</fileMode>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/assemble/resources/mindc++.bat</source>
            <fileMode>0755</fileMode>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
        	<source>target/site/ZigBeeSensor.pdf</source>
        	<fileMode>0644</fileMode>
            <outputDirectory>examples/cpp/ZigBeeSensor</outputDirectory>
            <!--<filtered>true</filtered>-->
        </file>
    </files>
</assembly>
